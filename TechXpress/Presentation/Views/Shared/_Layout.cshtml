<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - TechXpress</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />

    <link rel="stylesheet" href="~/css/styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/responsive.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css">
    @RenderSection("Styles", required: false)
</head>
<body>
    <header class="main-header">
        <nav class="main-nav">
            <div class="nav-container">
                <div class="logo">
                    <a href="~/Home/Index" class="logo-text">TechExpress</a>
                </div>
                <ul class="nav-links">
                    <li><a href="~/Home/Index" class="active">Home</a></li>
                    <li><a href="~/Product/Index">Products</a></li>
                    <li>
                        <a asp-action="Index" asp-controller="ShoppingCart" class="cart-link">
                            <span class="cart-icon">ðŸ›’</span>
                            <span id="cartCount" class="cart-count">0</span> <!-- Default value added -->
                        </a>
                    </li>
                </ul>
                @if (User.Identity.IsAuthenticated)
                {
                    <div class="user-nav">
                        <a asp-action="Logout" asp-controller="User" class="nav-link">Logout @User.Identity.Name.Split('_')[0]</a>
                    </div>
                }
                else
                {
                    <a class="nav-link" asp-action="Login" asp-controller="User">Login</a>
                }
            </div>
        </nav>
    </header>
    <main>
    @RenderBody()
    </main>

        <footer class="main-footer">
            <div class="container">
                <div class="footer-grid">
                    <div class="footer-section">
                        <h3>TeckExpress</h3>
                        <p>Your one-stop shop for quality products</p>
                    </div>
                    <div class="footer-section">
                        <h3>Quick Links</h3>
                        <ul>
                        <li><a href="~/Home/Index">Home</a></li>
                            <li><a href="~/Product/Index">Products</a></li>
                            <li><a href="~/Cart/Index">Cart</a></li>
                        </ul>
                    </div>
                    <div class="footer-section">
                        <h3>Contact</h3>
                        <ul>
                            <li>Email: TechExpress@gmail.com</li>
                            <li>Phone: 123-4567-89</li>
                        </ul>
                    </div>
                </div>
                <div class="footer-bottom">
                    <p>&copy; 2025 TeckExpress. All rights reserved.</p>
                    <a asp-action="Index" asp-controller="Admin" class="admin-link">Admin Portal</a>
                </div>
            </div>
        </footer>
    @await RenderSectionAsync("Scripts", required: false)
    @section Scripts {
        <script>
            // Update cart count on page load
            document.addEventListener('DOMContentLoaded', async function() {
                await updateCartCount();
            });

        </script>
    }
    <script src="~/js/home.js" asp-append-version="true"></script>
</body>
</html>
