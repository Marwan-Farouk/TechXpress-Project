@using BestStoreMVC.ViewModels
@model List<CategoryViewModel>

@{
    ViewData["Title"] = "Categories List";
}

<div class="container-fluid">
    <div class="row mb-4 align-items-center">
        <div class="col-md-6">
            <a class="btn btn-success" asp-controller="Categores" asp-action="Create">
                <i class="fas fa-plus me-2"></i>New Category
            </a>
        </div>
        <div class="col-md-6">
            <!-- Search and Filter Form -->
            <div class="d-flex justify-content-end">
                <!-- Search Input with Icon -->
                <form asp-action="Index" method="get" class="form-inline mr-2">
                    <div class="input-group">
                        <input type="text" name="searchString" class="form-control" placeholder="Search by name..." value="@ViewData["CurrentFilter"]" />
                        <div class="input-group-append">
                            <button type="submit" class="btn btn-outline-primary">
                                <i class="fas fa-search"></i>
                            </button>
                        </div>
                    </div>
                </form>

                <!-- Filter Dropdown with Icon -->
                <form asp-action="Index" method="get" class="form-inline">
                    <div class="input-group">
                        <select name="stockFilter" class="form-control" onchange="this.form.submit()">
                            <option value="">All</option>
                            <option value="inStock" selected="@(ViewData["StockFilter"]?.ToString() == "inStock")">In Stock</option>
                            <option value="outOfStock" selected="@(ViewData["StockFilter"]?.ToString() == "outOfStock")">Out of Stock</option>
                        </select>
                        <div class="input-group-append">
                            <button type="submit" class="btn btn-outline-secondary">
                                <i class="fas fa-filter"></i>
                            </button>
                        </div>
                    </div>
                    <input type="hidden" name="searchString" value="@ViewData["CurrentFilter"]" />
                </form>
            </div>
        </div>
    </div>

    <div class="table-responsive">
        <table class="table table-striped table-hover align-middle">
            <thead class="table-dark">
                <tr>
                    <th>#</th>
                    <th>Name</th>
                    <th>Description</th>
                    <th>Stock</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var category in Model)
                {
                    <tr>
                        <td>@category.Id</td>
                        <td>@category.Name</td>
                        <td>@category.Description</td>
                        <td>@category.Stock</td>
                        <td>
                            <a class="btn btn-sm btn-outline-secondary" asp-action="Edit" asp-route-id="@category.Id">
                                <i class="fas fa-edit"></i> Edit
                            </a>
                            <a class="btn btn-sm btn-outline-danger" asp-action="Delete" asp-route-id="@category.Id">
                                <i class="fas fa-trash"></i> Delete
                            </a>
                            <a class="btn btn-sm btn-info" asp-action="Details" asp-route-id="@category.Id">
                                <i class="fas fa-eye"></i> View
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>