@using BestStoreMVC.ViewModels;
@model CategoryViewModel

@{
    ViewData["Title"] = Model.Name;
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container my-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow border-0">
                <div class="card-header bg-primary text-white">
                    <h3 class="mb-0 d-flex align-items-center">
                        <i class="fas fa-info-circle me-3"></i>@Model.Name Details
                    </h3>
                </div>
                <div class="card-body">
                    <div class="mb-4">
                        <label asp-for="Id" class="form-label d-flex justify-content-between">
                            <span class="d-flex align-items-center text-muted">
                                <i class="fas fa-hashtag me-2"></i>Category ID
                            </span>
                        </label>
                        <input asp-for="Id" class="form-control form-control-lg rounded-pill bg-light" readonly>
                    </div>

                    <div class="mb-4">
                        <label asp-for="Name" class="form-label d-flex justify-content-between">
                            <span class="d-flex align-items-center text-muted">
                                <i class="fas fa-tag me-2 text-primary"></i>Name
                            </span>
                        </label>
                        <input asp-for="Name" class="form-control form-control-lg rounded-pill border-2" readonly>
                    </div>

                    <div class="mb-4">
                        <label asp-for="Description" class="form-label d-flex justify-content-between">
                            <span class="d-flex align-items-center text-muted">
                                <i class="fas fa-align-left me-2 text-primary"></i>Description
                            </span>
                        </label>
                        <textarea asp-for="Description" class="form-control rounded-3" rows="4" readonly></textarea>
                    </div>

                    <div class="mb-4">
                        <label asp-for="Stock" class="form-label d-flex justify-content-between">
                            <span class="d-flex align-items-center text-muted">
                                <i class="fas fa-boxes me-2 text-primary"></i>Stock
                            </span>
                        </label>
                        <input asp-for="Stock" class="form-control form-control-lg rounded-pill border-2" readonly>
                    </div>

                    <div class="d-grid gap-2 d-md-flex justify-content-md-end mt-5">
                        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-lg btn-warning rounded-pill me-md-3">
                            <i class="fas fa-edit me-2"></i>Edit
                        </a>
                        <a asp-action="Index" class="btn btn-lg btn-outline-secondary rounded-pill">
                            <i class="fas fa-arrow-left me-2"></i>Back to List
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>