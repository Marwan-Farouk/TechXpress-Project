@model Categore

@{
    ViewData["Title"] = Model.Name;
}

<!-- Add this to your layout if not already present -->
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">

<div class="container my-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow border-0">
                <div class="card-header bg-primary bg-gradient text-white">
                    <h3 class="mb-0 d-flex align-items-center">
                        <i class="fas fa-info-circle me-3"></i>@Model.Name Details
                    </h3>
                </div>
                <div class="card-body">
                    <div class="mb-4">
                        <label class="form-label d-flex justify-content-between align-items-center">
                            <span class="d-flex align-items-center text-muted">
                                <i class="fas fa-hashtag me-2"></i>Category ID
                            </span>
                        </label>
                        <input type="text"
                               class="form-control form-control-lg rounded-pill bg-light"
                               value="@Model.Id"
                               readonly>
                    </div>

                    <div class="mb-4">
                        <label class="form-label d-flex justify-content-between align-items-center">
                            <span class="d-flex align-items-center text-muted">
                                <i class="fas fa-tag me-2"></i>Name
                            </span>
                        </label>
                        <input type="text"
                               class="form-control form-control-lg rounded-pill bg-light"
                               value="@Model.Name"
                               readonly>
                    </div>

                    <div class="mb-4">
                        <label class="form-label d-flex justify-content-between align-items-center">
                            <span class="d-flex align-items-center text-muted">
                                <i class="fas fa-align-left me-2"></i>Description
                            </span>
                        </label>
                        <textarea class="form-control rounded-3 bg-light"
                                  rows="4"
                                  readonly>@Model.Description</textarea>
                    </div>

                    <div class="mb-4">
                        <label class="form-label d-flex justify-content-between align-items-center">
                            <span class="d-flex align-items-center text-muted">
                                <i class="fas fa-boxes me-2"></i>Stock
                            </span>
                        </label>
                        <input type="number"
                               class="form-control form-control-lg rounded-pill bg-light"
                               value="@Model.Stock"
                               readonly>
                    </div>

                    <div class="d-grid gap-2 d-md-flex justify-content-md-end mt-5">
                        <a asp-action="Edit" asp-route-id="@Model.Id"
                           class="btn btn-lg btn-warning rounded-pill me-md-3">
                            <i class="fas fa-edit me-2"></i>Edit
                        </a>
                        <a asp-action="Index"
                           class="btn btn-lg btn-outline-secondary rounded-pill">
                            <i class="fas fa-arrow-left me-2"></i>Back to List
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>