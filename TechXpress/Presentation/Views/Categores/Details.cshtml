@using BestStoreMVC.ViewModels;
@using Presentation.ViewModel.Category
@model CategoryViewModel

@{
    ViewData["Title"] = Model.Name;
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container my-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow border-0 rounded-3">
                <div class="card-header bg-primary text-white d-flex align-items-center">
                    <i class="fas fa-info-circle fa-lg me-2"></i>
                    <h4 class="mb-0">@Model.Name Details</h4>
                </div>
                <div class="card-body p-4">

                    <div class="mb-3">
                        <label class="form-label fw-medium text-muted">
                            <i class="fas fa-hashtag me-1 text-primary"></i>ID
                        </label>
                        <input value="@Model.Id" class="form-control bg-light" readonly />
                    </div>

                    <div class="mb-3">
                        <label class="form-label fw-medium text-muted">
                            <i class="fas fa-tag me-1 text-primary"></i>Name
                        </label>
                        <input value="@Model.Name" class="form-control bg-light" readonly />
                    </div>

                    <div class="mb-3">
                        <label class="form-label fw-medium text-muted">
                            <i class="fas fa-align-left me-1 text-primary"></i>Description
                        </label>
                        <textarea class="form-control bg-light" rows="4" readonly>@Model.Description</textarea>
                    </div>

                    <div class="mb-3">
                        <label class="form-label fw-medium text-muted">
                            <i class="fas fa-boxes me-1 text-primary"></i>Stock
                        </label>
                        @{
                            string badgeClass = Model.Stock > 0 ? "bg-success" : "bg-danger";
                        }
                        <div class="input-group">
                            <input value="@Model.Stock" class="form-control bg-light" readonly />

                            @if (Model.Stock > 0)
                            {
                                <span class="input-group-text @badgeClass text-white">In Stock</span>
                            }
                            else
                            {
                                <span class="input-group-text @badgeClass text-white"> Out of Stock</span>
                            }

                        </div>
                    </div>

                    <div class="d-grid gap-2 d-md-flex justify-content-md-end mt-4">
                        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning px-4 me-md-2">
                            <i class="fas fa-edit me-1"></i>Edit
                        </a>
                        <a asp-action="Index" class="btn btn-outline-secondary px-4">
                            <i class="fas fa-arrow-left me-1"></i>Back to List
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>