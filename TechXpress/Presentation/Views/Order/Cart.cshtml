@model Presentation.ViewModel.CartViewModel

@{
    ViewData["Title"] = "Shopping Cart";
}

<div class="container mt-4">
    <h1>Shopping Cart</h1>

    @if (Model.Items.Count == 0)
    {
        <div class="alert alert-info">
            Your cart is empty. <a asp-controller="Product" asp-action="Index">Continue shopping</a>
        </div>
    }
    else
    {
        <div class="row">
            <div class="col-md-8">
                <div class="card">
                    <div class="card-header bg-primary text-white">
                        <h5 class="mb-0">Cart Items (@Model.ItemCount)</h5>
                    </div>
                    <div class="card-body">
                        <table class="table table-hover">
                            <thead>
                                <tr>
                                    <th>Product</th>
                                    <th>Price</th>
                                    <th>Quantity</th>
                                    <th>Total</th>
                                    <th>Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model.Items)
                                {
                                    <tr>
                                        <td>
                                            <div class="d-flex align-items-center">
                                                @if (!string.IsNullOrEmpty(item.Image))
                                                {
                                                    <img src="@item.Image" alt="@item.ProductName" class="img-thumbnail me-2"
                                                        style="width: 50px; height: 50px;">
                                                }
                                                <span>@item.ProductName</span>
                                            </div>
                                        </td>
                                        <td>$@item.Price.ToString("F2")</td>
                                        <td>
                                            <form asp-action="UpdateQuantity" method="post" class="d-flex align-items-center">
                                                <input type="hidden" name="productId" value="@item.ProductId" />
                                                <input type="number" name="quantity" value="@item.Quantity" min="1" max="10"
                                                    class="form-control form-control-sm" style="width: 70px;" />
                                                <button type="submit"
                                                    class="btn btn-sm btn-outline-primary ms-2">Update</button>
                                            </form>
                                        </td>
                                        <td>$@item.Total.ToString("F2")</td>
                                        <td>
                                            <form asp-action="RemoveFromCart" method="post">
                                                <input type="hidden" name="productId" value="@item.ProductId" />
                                                <button type="submit" class="btn btn-sm btn-danger">Remove</button>
                                            </form>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card">
                    <div class="card-header bg-primary text-white">
                        <h5 class="mb-0">Order Summary</h5>
                    </div>
                    <div class="card-body">
                        <div class="d-flex justify-content-between mb-3">
                            <span>Subtotal:</span>
                            <span>$@Model.Total.ToString("F2")</span>
                        </div>
                        <div class="d-flex justify-content-between mb-3">
                            <span>Shipping:</span>
                            <span>Free</span>
                        </div>
                        <hr>
                        <div class="d-flex justify-content-between mb-3">
                            <strong>Total:</strong>
                            <strong>$@Model.Total.ToString("F2")</strong>
                        </div>
                        <div class="d-grid gap-2">
                            <a asp-controller="Product" asp-action="Index" class="btn btn-outline-secondary">Continue
                                Shopping</a>
                            <form asp-action="ClearCart" method="post">
                                <button type="submit" class="btn btn-outline-danger w-100">Clear Cart</button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
</div>
