@model List<Business.DTOs.Orders.GetOrderDto>
@{
    ViewData["Title"] = "All Orders in Admin";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<h2>All Orders (Admin View)</h2>

<table class="table">
    <thead>
        <tr>
            <th>Order ID</th>
            <th>User Name</th>
            <th>Total Amount</th>
            <th>Status</th>
            <th>Order Date</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var order in Model)
        {
            <tr>
                <td>@order.Id</td>
                <td>@order.UserName</td>
                <td>@order.TotalAmount</td>
                <td>@order.Status</td>
                <td>@order.OrderDate.ToShortDateString()</td>
            </tr>
        }
    </tbody>
</table>
