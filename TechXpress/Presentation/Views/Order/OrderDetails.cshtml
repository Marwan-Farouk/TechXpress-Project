@model Presentation.ViewModels.OrderViewModel

@{
    ViewData["Title"] = $"Order Details - #{Model.Id}";
}

<h2>Order Details</h2>

<p><strong>Order ID:</strong> @Model.Id</p>
<p><strong>Status:</strong> <span class="badge bg-info">@Model.Status</span></p>
<p><strong>Total Amount:</strong> @Model.TotalAmount.ToString("C")</p>
<p><strong>Order Date:</strong> @Model.OrderDate.ToString("dd/MM/yyyy HH:mm")</p>

<h4>Products:</h4>
<table class="table">
    <thead>
        <tr>
            <th>Product</th>
            <th>Quantity</th>
            <th>Unit Price</th>
            <th>Subtotal</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.OrderItems)
        {
            <tr>
                <td>@item.ProductName</td>
                <td>@item.Quantity</td>
                <td>@item.UnitPrice.ToString("C")</td>
                <td>@(item.Quantity * item.UnitPrice)</td>
            </tr>
        }
    </tbody>
</table>

<a class="btn btn-primary" href="@Url.Action("Index", "Order")">Back to Orders</a>
