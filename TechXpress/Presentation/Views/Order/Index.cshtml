@using Presentation.ViewModels
@model List<OrderViewModel>

<div class="container my-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="text-primary">🛒 Your Orders</h2>
        <a asp-action="Index" asp-controller="Home" class="btn btn-outline-secondary">
            <i class="fas fa-arrow-left"></i> Back to Home
        </a>
    </div>

    @if (!Model.Any())
    {
        <div class="alert alert-info text-center py-5">
            <i class="fas fa-shopping-bag fa-3x mb-3"></i>
            <h4 class="alert-heading">No orders yet!</h4>
            <p>Start shopping now to see your orders here.</p>
            <hr>
            <a asp-action="Index" asp-controller="Product" class="btn btn-success">
                <i class="fas fa-store"></i> Browse Products
            </a>
        </div>
    }
    else
    {
        <div class="table-responsive shadow-sm rounded">
            <table class="table table-hover align-middle mb-0">
                <thead class="table-dark">
                    <tr>
                        <th scope="col">#</th>
                        <th scope="col">Date</th>
                        <th scope="col">Total Amount</th>
                        <th scope="col">Status</th>
                        <th scope="col">Details</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var order in Model)
                    {
                        <tr class="align-middle">
                            <td>#@order.Id.ToString("D6")</td>
                            <td>@order.OrderDate.ToString("dd MMM yyyy")</td>
                            <td class="fw-bold">@order.TotalAmount.ToString("C")</td>
                            <td>
                                @{
                                    string badgeClass = order.Status switch
                                    {
                                        "Completed" => "bg-success",
                                        "Processing" => "bg-warning text-dark",
                                        "Cancelled" => "bg-danger",
                                        _ => "bg-secondary"
                                    };
                                }
                                <span class="badge @badgeClass">@order.Status</span>
                            </td>
                            <td>
                                <a asp-action="Details" asp-route-id="@order.Id" class="btn btn-sm btn-outline-primary">
                                    <i class="fas fa-eye"></i> View
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>

        <div class="mt-4 text-end">
            <button onclick="window.print()" class="btn btn-outline-secondary">
                <i class="fas fa-print"></i> Print List
            </button>
        </div>
    }
</div>

@section Styles {
    <style>
        .table thead th {
            vertical-align: middle;
            text-align: center;
        }

        .table tbody td {
            text-align: center;
            vertical-align: middle;
        }

        .badge {
            font-size: 0.9em;
            padding: 0.5em 0.8em;
        }
    </style>
}

@section Scripts {
    <script src="https://kit.fontawesome.com/a076d05399.js" crossorigin="anonymous"></script>
}