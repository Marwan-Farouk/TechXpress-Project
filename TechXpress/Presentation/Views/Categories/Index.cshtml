@using BestStoreMVC.ViewModels
@model List<CategoryViewModel>

@{
    ViewData["Title"] = "Categories List";
}

<div class="row mb-4">
    <div class="col-md-6">
        <a class="btn btn-success" asp-controller="Categores" asp-action="Create">
            <i class="fas fa-plus me-2">New Category</i>
        </a>
    </div>
</div>

<div class="table-responsive">
    <table class="table table-striped table-hover align-middle">
        <thead class="table-dark">
            <tr>
                <th>#</th>
                <th>Name</th>
                <th>Description</th>
                <th>Stock</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var category in Model)
            {
                <tr>
                    <td>@category.Id</td>
                    <td>@category.Name</td>
                    <td>@category.Description</td>
                    <td>@category.Stock</td>
                    <td>
                        <a class="btn btn-sm btn-outline-secondary" asp-action="Edit" asp-route-id="@category.Id">Edit</a>
                        <a class="btn btn-sm btn-outline-danger" asp-action="Delete" asp-route-id="@category.Id">Delete</a>
                        <a class="btn btn-sm btn-info" asp-action="Details" asp-route-id="@category.Id">View</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>