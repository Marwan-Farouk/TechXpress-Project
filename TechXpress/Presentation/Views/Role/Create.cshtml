@using Presentation.ActionRequests.User
@model CreateRoleActionRequest

@{
    ViewData["Title"] = "Create Role";
    Layout = "_AdminLayout";
}

<div class="card shadow-sm">
    <div class="card-header bg-light">
        <h4 class="mb-0"><i class="fas fa-plus-circle me-2"></i>Create New Role</h4>
    </div>
    <div class="card-body">
        <form asp-action="Create" method="post">
            <div asp-validation-summary="All" class="text-danger mb-3 alert alert-danger py-2"></div>
            
            <div class="row">
                <div class="col-md-8">
                    <div class="form-group mb-4">
                        <label asp-for="Name" class="form-label fw-medium">Role Name</label>
                        <div class="input-group">
                            <span class="input-group-text"><i class="fas fa-user-tag"></i></span>
                            <input asp-for="Name" class="form-control" placeholder="Enter role name"/>
                        </div>
                        <span asp-validation-for="Name" class="text-danger mt-1 d-block"></span>
                        <small class="text-muted">Role names should be unique and descriptive of the permissions they grant</small>
                    </div>
                </div>
            </div>
        
            <hr class="my-4" />
            
            <div class="d-flex justify-content-between align-items-center">
                <a asp-action="Index" class="btn btn-outline-secondary">
                    <i class="fas fa-arrow-left me-1"></i> Back to Roles
                </a>
                <button type="submit" class="btn btn-primary">
                    <i class="fas fa-save me-1"></i> Create Role
                </button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial"/>
}