@model List<DataAccess.Entities.Role>

@{
    ViewData["Title"] = "Roles";
    Layout = "_AdminLayout";
}

<div class="card shadow-sm">
    <div class="card-header bg-light">
        <h4 class="mb-0"><i class="fas fa-user-tag me-2"></i>System Roles</h4>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-hover table-striped">
                <thead class="table-light">
                    <tr>
                        <th>Role Name</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model.Any())
                    {
                        @foreach (var role in Model)
                        {
                            <tr>
                                <td class="fw-medium">@role.Name</td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td class="text-center py-3">
                                <div class="alert alert-info mb-0">
                                    <i class="fas fa-info-circle me-2"></i> No roles found.
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
    <div class="card-footer text-muted">
        <div class="d-flex justify-content-between align-items-center">
            <small>Total Roles: @Model.Count</small>
            <a asp-action="Create" class="btn btn-sm btn-outline-primary">
                <i class="fas fa-plus-circle me-1"></i> Create New Role
            </a>
        </div>
    </div>
</div>