@model List<Product>
@{
    ViewData["Title"] = "Product List";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <style>
        body {
            background-color: #f3e5f5;
        }

        .table thead {
            background-color: #7b1fa2;
            color: white;
        }

        .btn-primary {
            background-color: #7b1fa2;
            border-color: #7b1fa2;
        }

            .btn-primary:hover {
                background-color: #6a1b9a;
                border-color: #6a1b9a;
            }

        .btn-danger {
            background-color: #d32f2f;
            border-color: #d32f2f;
        }

            .btn-danger:hover {
                background-color: #c62828;
                border-color: #c62828;
            }

        .text-center {
            color: #4a148c;
        }
    </style>
</head>
<body>
    <div class="container mt-5">
        <h2 class="text-center mb-5">List of Products</h2>

        <div class="row mb-5">
            <div class="col text-right">
                <a class="btn btn-primary" asp-controller="Products" asp-action="Create">New Product</a>
            </div>
        </div>

        <table class="table table-striped table-hover">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Name</th>
                    <th>Description</th>
                    <th>Price</th>
                    <th>Category</th>
                    <th>Image</th>
                    <th>Brand</th>
                    <th>Created At</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var product in Model)
                {
                    <tr>
                        <td>@product.Id</td>
                        <td>@product.Name</td>
                        <td>@product.Description</td>
                        <td>@(product.Price)$</td>
                        <td>@product.Category</td>
                        <td><img src="@product.ImageFileName" class="img-thumbnail" width="100" height="100" /></td>
                        <td>@product.Brand</td>
                        <td>@product.CreatedAt.ToString("MM/dd/yyyy")</td>
                        <td style="white-space:nowrap">
                            <a class="btn btn-sm btn-primary" asp-controller="Products" asp-action="Edit" asp-route-id="@product.Id">Edit</a>
                            <a class="btn btn-sm btn-danger" asp-controller="Products" asp-action="Delete" asp-route-id="@product.Id" onclick="return confirm('you sure! ,you are gonna to delete this?')">Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.bundle.min.js"></script>
</body>
</html>

