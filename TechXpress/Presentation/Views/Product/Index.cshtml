@using Business.DTOs.Products
@model List<GetAllProductsDto>

@{
    ViewData["Title"] = "Product List";
}

<h2>Product List</h2>

<div class="mb-3 text-right">
    <a class="btn btn-primary" asp-action="Create">Add New Product</a>
</div>

<table class="table table-striped">
    <thead>
        <tr>
            <th>ID</th>
            <th>Name</th>
            <th>Description</th>
            <th>Price</th>
            <th>Stock</th>
            <th>Category</th>
            <th>Brand</th>
            <th>Image</th>
            <th>Date Added</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var product in Model)
        {
            <tr>
                <td>@product.Id</td>
                <td>@product.Name</td>
                <td>@product.Description</td>
                <td>@product.Price$</td>
                <td>@product.Stock</td>
                <td>@product.CategoryId</td>
                <td>@product.BrandId</td>
                <td><img src="@product.Image" class="img-thumbnail" width="100" height="100" /></td>
                <td>@product.DateAdded.ToString("MM/dd/yyyy")</td>
                <td>
                    <a class="btn btn-sm btn-primary" asp-action="Edit" asp-route-id="@product.Id">Edit</a>
                    <a class="btn btn-sm btn-danger" asp-action="Delete" asp-route-id="@product.Id" onclick="return confirm('Are you sure you want to delete this?')">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
