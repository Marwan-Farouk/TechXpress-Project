@using Presentation.ViewModel.Admin


@model List<UserRolesViewModel>

@{
    ViewData["Title"] = "List USers and their ROles";
}


<table class="table">
    <thead>
        <th>UserName</th>
        <th>Role</th>
        <th>Actions</th>
    </thead>

    <tbody>
        @foreach (var user in Model)
        {
            <tr>
                <td>@user.UserName</td>
                <td>@string.Join(", ", user.Roles)</td>
                <td>
                    <form asp-action="EditUserRoles" method="post">
                        <input type="hidden" name="userId" value="@user.UserId"/>
                        <select name="roles" multiple>
                            @foreach (var role in (List<string>)ViewBag.AllRoles)
                            {
                                @if(user.Roles.Contains(role))
                                {
                                    <option value="@role" selected>@role</option>
                                }
                                else
                                {
                                    <option value="@role">@role</option>
                                }

                        }
                        </select>
                        <button class="btn btn-success" type="submit">Update Roles</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>

