@model Presentation.ViewModels.CheckoutViewModel

<h2>Checkout</h2>

<form asp-action="Checkout" asp-controller="ShoppingCart" method="post">
    <div class="row">
        <div class="col-md-8">
            <h4>Shipping Address</h4>

            <div class="form-group">
                <label>Select Address:</label>
                <select id="addressSelect" class="form-control" onchange="updateAddressId()">
                    @foreach (var address in Model.UserAddresses)
                    {
                        <option value="@address.Id">@address.AddressLine, @address.City, @address.Country</option>
                    }
                </select>
                <input type="hidden" id="addressId" name="addressId" value="@(Model.UserAddresses.FirstOrDefault()?.Id ?? 0)" />
            </div>

            <h4>Order Summary</h4>
            <table class="table">
                <thead>
                    <tr>
                        <th>Product</th>
                        <th>Quantity</th>
                        <th>Price</th>
                        <th>Subtotal</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.Cart.Items)
                    {
                        <tr>
                            <td>@item.ProductName</td>
                            <td>@item.Quantity</td>
                            <td>@item.Price.ToString("C")</td>
                            <td>@item.SubTotal.ToString("C")</td>
                        </tr>
                    }
                </tbody>
                <tfoot>
                    <tr>
                        <td colspan="3" class="text-right"><strong>Total:</strong></td>
                        <td><strong>@Model.Cart.TotalAmount.ToString("C")</strong></td>
                    </tr>
                </tfoot>
            </table>
        </div>
    </div>

    <div class="form-group">
        <button type="submit" class="btn btn-success">Place Order</button>
        <a asp-action="Index" class="btn btn-secondary">Back to Cart</a>
    </div>
</form>
    
    <script>
    function updateAddressId() {
        var selectedAddress = document.getElementById('addressSelect').value;
        document.getElementById('addressId').value = selectedAddress;
    }
    
    // Initialize on page load
    document.addEventListener('DOMContentLoaded', function() {
        updateAddressId();
    });
    </script>