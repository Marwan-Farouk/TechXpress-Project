@model RegisterProject.Models.RegisterViewModel

@{
    ViewData["Title"] = "Register";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="css/main.css">
</head>
<body>
    <div class="main">
        <h1>Register</h1>
        <form method="post" asp-controller="Account" asp-action="Register">
            <div>
                <input type="text" name="Username" id="username" placeholder="Username" value="@Model.Username" />
                <span>@Model.UsernameError</span>
            </div>

            <div>
                <input type="email" name="Email" id="email" placeholder="Email" value="@Model.Email" />
                <span>@Model.EmailError</span>
            </div>

            <div>
                <input type="password" name="Password" id="password" placeholder="Password" />
                <span>@Model.PasswordError</span>
            </div>

            <div>
                <select name="Gender" title="Gender">
                    <option disabled selected>Choose</option>
                    <option value="male" @(Model.Gender == "male" ? "selected" : "")>Male</option>
                    <option value="female" @(Model.Gender == "female" ? "selected" : "")>Female</option>
                </select>
                <span>@Model.GenderError</span>
            </div>

            <div>
                <label>Birthday:</label>
                <select name="Birthday_Day">
                    @for (int i = 1; i <= 31; i++)
                    {
                        <option value="@i">@i</option>
                    }
                </select>

                <select name="Birthday_Month">
                    @for (int i = 1; i <= 12; i++)
                    {
                        <option value="@i">@i</option>
                    }
                </select>

                <select name="Birthday_Year">
                    @for (int i = 1950; i <= DateTime.Now.Year; i++)
                    {
                        <option value="@i">@i</option>
                    }
                </select>
                <span>@Model.BirthdayError</span>
            </div>

            <div>
                <input type="submit" value="Register" />
            </div>
        </form>
    </div>
</body>
</html>